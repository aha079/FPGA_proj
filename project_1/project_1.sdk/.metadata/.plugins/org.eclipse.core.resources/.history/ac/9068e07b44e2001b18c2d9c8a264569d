/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_types.h"
#include "xil_io.h"
#include "xstatus.h"
#define base1 0x44A00000
#define base2 0x44A10000
#define base3 0x44A20000
#define base4 0x44A30000
#define reg0 0
#define reg1 4
#define reg2 8
#define reg3 12
#define reg4 16
#define edgeDetection_mWriteReg(BaseAddress, RegOffset, Data) \
		Xil_Out32((BaseAddress) + (RegOffset), (u32)(Data))
#define edgeDetection_mReadReg(BaseAddress, RegOffset) \
		Xil_In32((BaseAddress) + (RegOffset))


int main()
{
    init_platform();
    edgeDetection_mWriteReg(base, reg0, 0x0000AA02);
    edgeDetection_mWriteReg(base, reg1, 0x00040608);
    edgeDetection_mWriteReg(base, reg2, 0x00040608);
    edgeDetection_mWriteReg(base, reg3, 0x00040608);
    edgeDetection_mReadReg(base, reg4);

    cleanup_platform();
    return 0;
}
